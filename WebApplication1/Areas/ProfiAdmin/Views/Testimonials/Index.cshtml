@using WebApplication1.Models
@using WebApplication1.ViewModels
@model HomeViewModel

@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                <a class="btn btn-success" asp-action="Create">Create Slider</a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Place
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var work in Model.Testimonials)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/images/@work.Url" />
                                    </td>
                                    <td><h5>@work.Name</h5></td>
                                    <td><h5>@work.Description</h5></td>
                                    <td><h5>@work.Rank</h5></td>
                                    <td><h5>@work.Comment</h5></td>
                                    <td>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@work.Id">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>
                                        <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@work.Id">
                                            <i class="mdi mdi-lead-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>